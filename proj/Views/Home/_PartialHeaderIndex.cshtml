@using Microsoft.AspNet.Identity
@model proj.Models.others.UserView

<!-- header -->
<div id="header">
    <div class="container">
        <div class="pull-left">
            <!-- Logo -->
            <div class="header-logo">
                <a class="logo" href="#">
                    <img src="../Content/DemoUser/img/logo.png" alt="">
                </a>
            </div>
            <!-- /Logo -->
            <!-- Search -->
            <div class="header-search">
                <form>
                    <input class="input search-input" type="text" placeholder="Enter your keyword">
                    <select class="input search-categories">
                        @foreach (var item in Model.categories)
                         {
                            <option value="@item.refCat"  onclick="location.href='@Url.Action("Details","Articles")?id=@item.refCat'">@item.nomcatg</option>
                         }
                    </select>
                    <button class="search-btn"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <!-- /Search -->
        </div>
        <div class="pull-right">
            <ul class="header-btns">
                <!-- Account -->
                <li class="header-account dropdown default-dropdown">
                    <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                        <div class="header-btns-icon">
                            <i class="fa fa-user-o"></i>
                        </div>
                        <strong class="text-uppercase">Mon Compte <i class="fa fa-caret-down"></i></strong>
                    </div>
                   @if (User.Identity.GetUserId() is null) { 
                       <a href="/Account/Login" class="text-uppercase">Login</a> <a href="/Account/Register" class="text-uppercase">Join</a>
                   }
                    <ul class="custom-menu">
                        <li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>
                        <li><a href="#"><i class="fa fa-heart-o"></i> My Wishlist</a></li>
                        <li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
                        <li><a href="#"><i class="fa fa-check"></i> Checkout</a></li>
                    </ul>
                </li>
                <!-- /Account -->
                <!-- Cart -->
                <li class="header-cart dropdown default-dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                        <div class="header-btns-icon">
                            <i class="fa fa-shopping-cart"></i>
                            <span class="qty">@Model.Commandes.Count()</span>
                        </div>
                        <strong class="text-uppercase">Mon Panier</strong>
                        <br>
                        <span></span>
                    </a>
                    <div class="custom-menu">
                        <div id="shopping-cart">
                            <div class="shopping-cart-list">
                              @foreach (var item in Model.ligneCommandes)
                               {
                                    <div class="product product-widget">
                                        <div class="product-thumb">
                                            <img src="../Content/DemoUser/img/thumb-@item.Article.photo" alt="">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-price">@item.totalPrice<span class="qty">@item.QteArticle</span></h3>
                                            <h2 class="product-name"><a href="#">@item.Article.designation</a></h2>
                                        </div>
                                        <button class="cancel-btn" type="submit"  onclick="location.href='@Url.Action("Delete","LigneCommandes")?id=@item.numLigne'"><i class="fa fa-trash"></i></button>
                                    </div>
                              }
                            </div>
                        </div>
                    </div>
                </li>
                <!-- /Cart -->
                <!-- Mobile nav toggle-->
                <li class="nav-toggle">
                    <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
                </li>
                <!-- / Mobile nav toggle -->
            </ul>
        </div>
    </div>
