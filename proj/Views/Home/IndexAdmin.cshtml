@model proj.Models.Article

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
}
<script>
    $(function () {
        $("#Catselected").change(function () {
            $.get("/Home/GetArticleByRef", { ID: $("#Catselected").val() }, function (data) {
                $("#contenu").empty();
                $.each(data, function (index, ligne) {
                    $("#contenu").append("<tr> <td>" + ligne.numArticle + "</td> <td>" + ligne.designation + "</td> <td>" + ligne.prixU + "</td> <td>" + ligne.stock + "</td> <td> <a href='Details?id=" + ligne.numArticle +"'>Details</a></td>")
                });
            });

        });



    });
</script>


<div class="content-wrapper" style="min-height: 990px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!--<h1>
            General Form Elements
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>-->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Articles</h3>
                        <div>
                            
                            <hr />
                            @using (Html.BeginForm("page2", "Home", FormMethod.Post))
                            {
                        <div class="form-horizontal" role="form">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            
                                <div class="form-group">
                                    <div class="col-md-4">
                                      
                                            @Html.DropDownListFor(model => model.refCat, ViewBag.f as SelectList,"Selectionner Categorie", new { @class= "form-control", id = "Catselected" })
                                        
                                    </div>
                                </div>
                            </div>
                            

                             }

                                

                                        <div class="box-tools">
                                            <div class="input-group input-group-sm" style="width: 150px;">
                                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                                                <div class="input-group-btn">
                                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                                </div>
                                            </div>
                                       
                                    <!-- /.box-header -->
                                    <div class="box-body table-responsive no-padding">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Description</th>
                                                    <th>Prix</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                    <th>Reason</th>
                                                </tr>
                                            </thead>
                                            <tbody id="contenu"></tbody>
                                        </table>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                            </div>
                        </div>
                        </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>


